<Window x:Class="MakerScreen.Management.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MakerScreen.Management.ViewModels"
        xmlns:converters="clr-namespace:MakerScreen.Management.Converters"
        Title="MakerScreen Management Console" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F57C00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="MakerScreen" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Digital Signage Management Console" FontSize="14" Foreground="#E3F2FD"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="14" 
                               Foreground="White"
                               TextAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content with TabControl -->
        <TabControl Grid.Row="1" Margin="10">
            
            <!-- Dashboard Tab -->
            <TabItem Header="ðŸ“Š Dashboard">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Panel - Deployment & Content -->
                    <StackPanel Grid.Column="0">
                        
                        <!-- Deployment Section -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Client Deployment" Style="{StaticResource HeaderStyle}"/>
                                
                                <!-- Server URL Configuration -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Server URL for Raspberry Pi" FontSize="12" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding RaspberryPiServerUrl, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="5" 
                                             ToolTip="WebSocket server URL that Raspberry Pi clients will connect to (e.g., ws://192.168.1.100:8443)"/>
                                </StackPanel>
                                
                                <Button Content="ðŸš€ Auto-Deploy Clients"
                                        Command="{Binding AutoDeployClientsCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        ToolTip="Automatically discover and deploy to Raspberry Pi devices on the network"/>
                                
                                <Button Content="ðŸ“¦ Create Deployment Package"
                                        Command="{Binding CreateDeploymentPackageCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        ToolTip="Create a deployment package for manual installation"/>
                                
                                <Button Content="ðŸ’¿ Generate Raspberry Pi Image"
                                        Command="{Binding GenerateRaspberryPiImageCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        ToolTip="Generate a bootable Raspberry Pi image with pre-installed client"/>
                                
                                <TextBlock Text="Deploy clients with zero manual intervention." 
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Foreground="#666666"
                                           Margin="0,15,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Quick Content Push -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Quick Content Push" Style="{StaticResource HeaderStyle}"/>
                                
                                <Button Content="âž• Add Content"
                                        Command="{Binding AddContentCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                                
                                <ListBox ItemsSource="{Binding ContentItems}"
                                         SelectedItem="{Binding SelectedContent}"
                                         Height="150"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"
                                         Margin="0,10,0,0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Type}" FontSize="10" Foreground="#666666"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1"
                                                        Content="Push"
                                                        Command="{Binding DataContext.PushContentToClientsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource PrimaryButtonStyle}"
                                                        Padding="10,5"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Right Panel - Connected Clients -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="Connected Clients" Style="{StaticResource HeaderStyle}"/>
                                <Button Content="ðŸ”„ Refresh"
                                        Command="{Binding RefreshClientsCommand}"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Padding="15,5"/>
                            </Grid>
                            
                            <DataGrid ItemsSource="{Binding Clients}"
                                      SelectedItem="{Binding SelectedClient}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      HeadersVisibility="Column"
                                      BorderThickness="0"
                                      Background="White"
                                      Height="300">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="150"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                    <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="80"/>
                                    <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen, StringFormat='{}{0:HH:mm:ss}'}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <TextBlock Text="No clients connected yet."
                                       FontSize="14"
                                       Foreground="#999999"
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0"
                                       Visibility="{Binding Clients.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Playlists Tab -->
            <TabItem Header="ðŸ“‹ Playlists">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Playlist List -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Playlists" Style="{StaticResource HeaderStyle}"/>
                            
                            <Button Content="âž• Create Playlist"
                                    Command="{Binding CreatePlaylistCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                            
                            <ListBox ItemsSource="{Binding Playlists}"
                                     SelectedItem="{Binding SelectedPlaylist}"
                                     Height="400"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"
                                     Margin="0,10,0,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock FontSize="10" Foreground="#666666">
                                                <Run Text="{Binding Items.Count, Mode=OneWay}"/>
                                                <Run Text=" items"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#888888" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                    
                    <!-- Playlist Details -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Playlist Details" Style="{StaticResource HeaderStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Playlist Items -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Playlist Items" Style="{StaticResource SubHeaderStyle}"/>
                                    <ListBox ItemsSource="{Binding SelectedPlaylist.Items}"
                                             Height="250"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="{Binding Order}" FontWeight="Bold" Margin="0,0,10,0"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding ContentId}" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Grid.Column="2" Foreground="#666666">
                                                        <Run Text="{Binding Duration}"/>
                                                        <Run Text="s"/>
                                                    </TextBlock>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                                
                                <!-- Available Content -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Available Content" Style="{StaticResource SubHeaderStyle}"/>
                                    <ListBox ItemsSource="{Binding ContentItems}"
                                             SelectedItem="{Binding SelectedContent}"
                                             Height="200"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Type}" FontSize="10" Foreground="#666666"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    
                                    <Button Content="âž• Add to Playlist"
                                            Command="{Binding AddContentToPlaylistCommand}"
                                            CommandParameter="{Binding SelectedContent}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Margin="0,10,0,0"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Playlist Actions -->
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Button Content="ðŸ“¤ Assign to All Clients"
                                        Command="{Binding AssignPlaylistToClientsCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                                
                                <Button Content="ðŸ“¤ Assign to Group"
                                        Command="{Binding AssignPlaylistToGroupCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                                
                                <Button Content="ðŸ—‘ï¸ Delete Playlist"
                                        Command="{Binding DeletePlaylistCommand}"
                                        CommandParameter="{Binding SelectedPlaylist}"
                                        Style="{StaticResource DangerButtonStyle}"/>
                            </StackPanel>
                            
                            <!-- Schedule Section -->
                            <TextBlock Text="Schedule" Style="{StaticResource SubHeaderStyle}" Margin="0,20,0,0"/>
                            <Border BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" CornerRadius="4">
                                <StackPanel>
                                    <CheckBox Content="Enable Schedule" 
                                              IsChecked="{Binding SelectedPlaylist.IsActive}"
                                              Margin="0,5"/>
                                    <TextBlock Text="Schedule settings coming soon..." 
                                               FontSize="12" 
                                               Foreground="#999999"
                                               FontStyle="Italic"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Overlays Tab -->
            <TabItem Header="ðŸŽ¨ Overlays">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Overlay List -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Overlays" Style="{StaticResource HeaderStyle}"/>
                            
                            <Button Content="âž• Create Overlay"
                                    Command="{Binding CreateOverlayCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                            
                            <ListBox ItemsSource="{Binding Overlays}"
                                     SelectedItem="{Binding SelectedOverlay}"
                                     Height="400"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"
                                     Margin="0,10,0,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Type}" FontSize="10" Foreground="#666666"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                    
                    <!-- Overlay Editor -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Overlay Editor" Style="{StaticResource HeaderStyle}"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Overlay Properties -->
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Properties" Style="{StaticResource SubHeaderStyle}"/>
                                        
                                        <TextBlock Text="Name" FontSize="12" Margin="0,5,0,2"/>
                                        <TextBox Text="{Binding SelectedOverlay.Name, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="5" Margin="0,0,0,10"/>
                                        
                                        <TextBlock Text="Type" FontSize="12" Margin="0,5,0,2"/>
                                        <ComboBox SelectedItem="{Binding SelectedOverlay.Type}"
                                                  Padding="5" Margin="0,0,0,10">
                                            <ComboBoxItem Content="Text"/>
                                            <ComboBoxItem Content="DateTime"/>
                                            <ComboBoxItem Content="Weather"/>
                                            <ComboBoxItem Content="Ticker"/>
                                            <ComboBoxItem Content="SqlData"/>
                                            <ComboBoxItem Content="Html"/>
                                            <ComboBoxItem Content="QrCode"/>
                                            <ComboBoxItem Content="Logo"/>
                                        </ComboBox>
                                        
                                        <TextBlock Text="Content" FontSize="12" Margin="0,5,0,2"/>
                                        <TextBox Text="{Binding SelectedOverlay.Content, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="80"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Auto"
                                                 Padding="5" Margin="0,0,0,10"/>
                                        
                                        <TextBlock Text="Refresh Interval (seconds)" FontSize="12" Margin="0,5,0,2"/>
                                        <TextBox Text="{Binding SelectedOverlay.RefreshInterval, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="5" Margin="0,0,0,10"/>
                                    </StackPanel>
                                    
                                    <!-- Overlay Style -->
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Style" Style="{StaticResource SubHeaderStyle}"/>
                                        
                                        <TextBlock Text="Font Family" FontSize="12" Margin="0,5,0,2"/>
                                        <TextBox Text="{Binding SelectedOverlay.Style.FontFamily, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="5" Margin="0,0,0,10"/>
                                        
                                        <TextBlock Text="Font Size" FontSize="12" Margin="0,5,0,2"/>
                                        <TextBox Text="{Binding SelectedOverlay.Style.FontSize, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="5" Margin="0,0,0,10"/>
                                        
                                        <TextBlock Text="Font Color" FontSize="12" Margin="0,5,0,2"/>
                                        <TextBox Text="{Binding SelectedOverlay.Style.FontColor, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="5" Margin="0,0,0,10"/>
                                        
                                        <TextBlock Text="Background Color" FontSize="12" Margin="0,5,0,2"/>
                                        <TextBox Text="{Binding SelectedOverlay.Style.BackgroundColor, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="5" Margin="0,0,0,10"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- SQL Data Settings (only visible when Type is SqlData) -->
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" CornerRadius="4" Margin="0,10,0,0"
                                        Visibility="{Binding SelectedOverlay.Type, Converter={StaticResource OverlayTypeToVisibilityConverter}, ConverterParameter=SqlData}">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ—„ï¸ SQL Data Settings" Style="{StaticResource SubHeaderStyle}" Foreground="#1976D2"/>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="Server" FontSize="12" Margin="0,5,0,2"/>
                                                <TextBox Text="{Binding SelectedOverlay.SqlConnectionSettings.Server, UpdateSourceTrigger=PropertyChanged}"
                                                         Padding="5" ToolTip="SQL Server hostname or IP address"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                                                <TextBlock Text="Port" FontSize="12" Margin="0,5,0,2"/>
                                                <TextBox Text="{Binding SelectedOverlay.SqlConnectionSettings.Port, UpdateSourceTrigger=PropertyChanged}"
                                                         Padding="5" ToolTip="SQL Server port (default: 1433)"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,0">
                                                <TextBlock Text="Database" FontSize="12" Margin="0,5,0,2"/>
                                                <TextBox Text="{Binding SelectedOverlay.SqlConnectionSettings.Database, UpdateSourceTrigger=PropertyChanged}"
                                                         Padding="5" ToolTip="Database name"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,5,10,0">
                                                <TextBlock Text="Username" FontSize="12" Margin="0,5,0,2"/>
                                                <TextBox Text="{Binding SelectedOverlay.SqlConnectionSettings.Username, UpdateSourceTrigger=PropertyChanged}"
                                                         Padding="5" ToolTip="SQL authentication username"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,5,0,0">
                                                <TextBlock Text="Password" FontSize="12" Margin="0,5,0,2"/>
                                                <PasswordBox converters:PasswordBoxHelper.BindPassword="True"
                                                             converters:PasswordBoxHelper.BoundPassword="{Binding SelectedOverlay.SqlConnectionSettings.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Padding="5" ToolTip="SQL authentication password"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
                                                <CheckBox Content="Use Windows Authentication (Trusted Connection)" 
                                                          IsChecked="{Binding SelectedOverlay.SqlConnectionSettings.UseTrustedConnection}"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <TextBlock Text="SQL Query" FontSize="12" Margin="0,10,0,2"/>
                                        <TextBox Text="{Binding SelectedOverlay.SqlQuery, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="60" AcceptsReturn="True" TextWrapping="Wrap" 
                                                 VerticalScrollBarVisibility="Auto" Padding="5" FontFamily="Consolas"
                                                 ToolTip="SQL query to execute for data retrieval"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Weather Settings (only visible when Type is Weather) -->
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" CornerRadius="4" Margin="0,10,0,0"
                                        Visibility="{Binding SelectedOverlay.Type, Converter={StaticResource OverlayTypeToVisibilityConverter}, ConverterParameter=Weather}">
                                    <StackPanel>
                                        <TextBlock Text="ðŸŒ¤ï¸ Weather Settings" Style="{StaticResource SubHeaderStyle}" Foreground="#FF9800"/>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,0">
                                                <TextBlock Text="API Key" FontSize="12" Margin="0,5,0,2"/>
                                                <TextBox Text="{Binding SelectedOverlay.WeatherSettings.ApiKey, UpdateSourceTrigger=PropertyChanged}"
                                                         Padding="5" ToolTip="OpenWeatherMap API key"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,5,10,0">
                                                <TextBlock Text="Location" FontSize="12" Margin="0,5,0,2"/>
                                                <TextBox Text="{Binding SelectedOverlay.WeatherSettings.Location, UpdateSourceTrigger=PropertyChanged}"
                                                         Padding="5" ToolTip="City name or coordinates (e.g., 'Berlin' or '52.52,13.40')"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,5,0,0">
                                                <TextBlock Text="Units" FontSize="12" Margin="0,5,0,2"/>
                                                <ComboBox SelectedItem="{Binding SelectedOverlay.WeatherSettings.Units}"
                                                          Padding="5" ToolTip="Temperature units">
                                                    <ComboBoxItem Content="metric"/>
                                                    <ComboBoxItem Content="imperial"/>
                                                    <ComboBoxItem Content="kelvin"/>
                                                </ComboBox>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,5,10,0">
                                                <TextBlock Text="Language" FontSize="12" Margin="0,5,0,2"/>
                                                <TextBox Text="{Binding SelectedOverlay.WeatherSettings.Language, UpdateSourceTrigger=PropertyChanged}"
                                                         Padding="5" ToolTip="Language code (e.g., 'en', 'de', 'fr')"/>
                                            </StackPanel>
                                            
