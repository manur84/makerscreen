<Window x:Class="MakerScreen.Management.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MakerScreen.Management.ViewModels"
        Title="MakerScreen Management Console" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="MakerScreen" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Digital Signage Management Console" FontSize="14" Foreground="#E3F2FD"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="14" 
                               Foreground="White"
                               TextAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Deployment & Content -->
            <StackPanel Grid.Column="0">
                
                <!-- Deployment Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Client Deployment" Style="{StaticResource HeaderStyle}"/>
                        
                        <Button Content="ðŸš€ Auto-Deploy Clients"
                                Command="{Binding AutoDeployClientsCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                ToolTip="Automatically discover and deploy to Raspberry Pi devices on the network"/>
                        
                        <Button Content="ðŸ“¦ Create Deployment Package"
                                Command="{Binding CreateDeploymentPackageCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                ToolTip="Create a deployment package for manual installation"/>
                        
                        <Button Content="ðŸ’¿ Generate Raspberry Pi Image"
                                Command="{Binding GenerateRaspberryPiImageCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                ToolTip="Generate a bootable Raspberry Pi image with pre-installed client"/>
                        
                        <TextBlock Text="Deploy clients with zero manual intervention. The server will automatically discover Raspberry Pi devices and install the client software." 
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="#666666"
                                   Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Content Management Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Content Management" Style="{StaticResource HeaderStyle}"/>
                        
                        <Button Content="âž• Add Content"
                                Command="{Binding AddContentCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                        
                        <TextBlock Text="Content Library" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,15,0,10"/>
                        
                        <ListBox ItemsSource="{Binding ContentItems}"
                                 Height="200"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Type}" FontSize="10" Foreground="#666666"/>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="1"
                                                Content="Push"
                                                Command="{Binding DataContext.PushContentToClientsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Padding="10,5"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Right Panel - Connected Clients -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="Connected Clients" Style="{StaticResource HeaderStyle}"/>
                        <Button Content="ðŸ”„ Refresh"
                                Command="{Binding RefreshClientsCommand}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="15,5"/>
                    </Grid>
                    
                    <DataGrid ItemsSource="{Binding Clients}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              Background="White">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="150"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                <Setter Property="Foreground" Value="#999999"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Error">
                                                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="80"/>
                            <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen, StringFormat='{}{0:HH:mm:ss}'}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <TextBlock Text="No clients connected yet. Deploy clients using the deployment options on the left."
                               FontSize="14"
                               Foreground="#999999"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"
                               Visibility="{Binding Clients.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#333333" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Fill="{StaticResource SuccessBrush}" Margin="0,0,5,0"/>
                    <TextBlock Text="Server Running" Foreground="White" FontSize="12"/>
                </StackPanel>
                
                <TextBlock Grid.Column="2" 
                           Text="MakerScreen v1.0.0" 
                           Foreground="#999999"
                           FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
